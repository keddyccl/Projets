class Solution {
public:
    int numberOfMatches(int n) {
        if (n==1){
            return  0 ;
        }
        if (n == 2){
         std::cout<<"Teams = "<< n<<","<< "Matches = "<< n/2<<","<< n/2 <<"equipe a gagnÃ©"<< std::endl;   
        }
        if (n%2 ==0){
            std::cout<<"Teams = "<< n<<","<< "Matches = "<< n/2<<","<< n/2 <<"equipe  se    qualifie"<< std::endl;
        return n / 2 + numberOfMatches(n / 2);}
        if (n%2 !=0){
           std::cout<<"Teams = "<< n<<","<< "Matches = "<< (n-1)/2<<","<<  (n - 1) / 2 + 1 <<"equipe  se    qualifie"<< std::endl;
            return (n-1) / 2 + numberOfMatches((n+1)/2);}
        return 0;
    }
};
